<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etShowNumber" android:paddingTop="15pt" android:gravity="bottom|right"
            android:textSize="40sp" android:background="@color/gray" android:textColor="@color/white"
            android:layout_weight="1"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:text="AC"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/buAC" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:layout_marginRight="1pt"
                    android:onClick="BuAcEvnet"/>
            <Button
                    android:text="+/-"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/buPluseMins" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:onClick="buNumberEvent"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:text="%"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/buMod" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:layout_marginRight="1pt"
                    android:onClick="buModEvent"/>
            <Button
                    android:text="รท"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/buDiv" android:textSize="15sp"
                    android:background="@color/orange" android:textColor="@color/white" android:layout_weight="1"
                    android:onClick="buOpEvents"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:text="7"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/bu7" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:onClick="buNumberEvent"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:text="8"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/bu8" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:onClick="buNumberEvent"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:text="9"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/bu9" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:onClick="buNumberEvent"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:text="ร"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/buMul" android:textSize="15sp"
                    android:background="@color/orange" android:textColor="@color/white" android:layout_weight="1"
                    android:onClick="buOpEvents"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:text="6"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/bu6" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:onClick="buNumberEvent"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:text="5"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/bu5" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:onClick="buNumberEvent"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:text="4"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/bu4" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:onClick="buNumberEvent"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:text="-"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/buSup" android:textSize="15sp"
                    android:background="@color/orange" android:textColor="@color/white" android:layout_weight="1"
                    android:onClick="buOpEvents"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:text="1"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/bu1" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:onClick="buNumberEvent"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:text="2"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/bu2" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:onClick="buNumberEvent"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:text="3"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/bu3" android:textSize="15sp"
                    android:background="@color/lightgray" android:layout_weight="1" android:onClick="buNumberEvent"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:text="+"
                    android:layout_width="20pt"
                    android:layout_height="15pt" android:id="@+id/buSum" android:textSize="15sp"
                    android:background="@color/orange" android:textColor="@color/white" android:layout_weight="1"
                    android:onClick="buOpEvents"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="0"
                android:layout_width="40pt"
                android:layout_height="15pt" android:id="@+id/bu0" android:layout_weight="1"
                android:textSize="15sp" android:background="@color/lightgray" android:onClick="buNumberEvent"
                android:layout_marginRight="1pt"/>
        <Button
                android:text="."
                android:layout_width="10pt"
                android:layout_height="15pt" android:id="@+id/dot" android:layout_weight="1"
                android:textSize="15sp" android:background="@color/lightgray" android:onClick="buNumberEvent"
                android:layout_marginRight="1pt"/>
        <Button
                android:text="="
                android:layout_width="8pt"
                android:layout_height="15pt" android:id="@+id/buEqual" android:layout_weight="1"
                android:textSize="15sp" android:background="@color/orange" android:textColor="@color/white"
                android:onClick="buEqualEvents"/>
    </LinearLayout>
</LinearLayout>